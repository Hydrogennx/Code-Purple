<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hydrogennx.controller.ServerSetup">
   <children>
      <Pane layoutX="14.0" layoutY="72.0" prefHeight="315.0" prefWidth="256.0">
         <children>
            <Label fx:id="playerList" layoutX="14.0" layoutY="14.0" text="Waiting for players..." textFill="WHITE" />
         </children>
      </Pane>
      <Button fx:id="startGameButton" disable="true" layoutX="368.0" layoutY="335.0" mnemonicParsing="false" onAction="#startGame" prefHeight="43.0" prefWidth="218.0" text="Begin">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Button fx:id="stopSessionButton" layoutX="363.0" layoutY="14.0" mnemonicParsing="false" onAction="#stopSession" prefHeight="51.0" prefWidth="218.0" text="Leave">
         <font>
            <Font size="24.0" />
         </font></Button>
      <TextField fx:id="ipTextField" layoutX="33.0" layoutY="14.0" prefHeight="25.0" prefWidth="150.0" />
      <Button fx:id="joinGameButton" layoutX="191.0" layoutY="14.0" mnemonicParsing="false" onAction="#joinGame" text="Connect" />
      <Label layoutX="14.0" layoutY="18.0" text="IP:" textFill="WHITE" />
      <Label fx:id="connectionLog" layoutX="19.0" layoutY="49.0" textFill="RED" />
      <Button fx:id="refreshButton" layoutX="525.0" layoutY="72.0" mnemonicParsing="false" onAction="#refreshPlayerList" text="Refresh" />
   </children>
</AnchorPane>
